<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    tools:context=".fragments.NavViewFragments.ProgramManagerFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/manager_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Your exercise time"
            android:textSize="30sp"
            android:textColor="@color/color_tertiary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/manager_time_value"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:text=" - - : - - "
            android:textSize="48sp"
            android:textColor="@color/color_tertiary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manager_time_text"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/manager_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your exercise duration"
            android:textSize="30sp"
            android:textColor="@color/color_tertiary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manager_time_value" />

        <TextView
            android:id="@+id/manager_duration_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - - : - - "
            android:textSize="48sp"
            android:textColor="@color/color_tertiary"
            app:layout_constraintBottom_toTopOf="@id/manager_graphic_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manager_duration_text"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/manager_graphic_2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@color/blue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manager_duration_value" />

        <Button
            android:id="@+id/button_configure_manager"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:text="Configure"
            android:textSize="20sp"
            android:background="@color/color_secondary"
            app:layout_constraintBottom_toTopOf="@id/button_start_from_manager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manager_graphic_2"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/button_start_from_manager"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:text="Start"
            android:textSize="20sp"
            android:background="@color/color_secondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_configure_manager"
            app:layout_constraintVertical_bias="0.5" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>