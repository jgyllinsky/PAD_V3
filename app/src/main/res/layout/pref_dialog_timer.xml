<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edit_timer_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_timer_colon1"
        android:layout_weight="1"
        android:maxLength="2"
        android:inputType="number"
        android:textSize="52sp"/>

    <TextView
        android:id="@+id/edit_timer_colon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintLeft_toRightOf="@id/edit_timer_hours"
        app:layout_constraintRight_toLeftOf="@id/edit_timer_minutes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text=":"
        android:textSize="52sp"/>

    <EditText
        android:id="@+id/edit_timer_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLength="2"
        app:layout_constraintLeft_toRightOf="@id/edit_timer_colon1"
        app:layout_constraintRight_toLeftOf="@id/edit_timer_colon2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:inputType="number"
        android:textSize="52sp"/>

    <TextView
        android:id="@+id/edit_timer_colon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/edit_timer_minutes"
        app:layout_constraintRight_toLeftOf="@id/edit_timer_seconds"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="1"
        android:text=":"
        android:textSize="52sp"/>

    <EditText
        android:id="@+id/edit_timer_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/edit_timer_colon2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="1"
        android:maxLength="2"
        android:inputType="number"
        android:textSize="52sp"/>

</android.support.constraint.ConstraintLayout>